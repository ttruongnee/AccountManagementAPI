<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

	<targets>
		<!-- Log Info -->
		<target name="infoFile" xsi:type="File"
				fileName="logs/info.log"
				layout= "&quot;Time&quot;: &quot;${longdate}&quot;, &quot;Level&quot;: &quot;${level}&quot;, &quot;AccountId&quot;: &quot;${event-properties:AccountId}&quot;, &quot;SubId&quot;: &quot;${event-properties:SubId}&quot;, &quot;Action&quot;: &quot;${event-properties:Action}&quot;, &quot;Amount&quot;: &quot;${event-properties:Amount}&quot;, &quot;Success&quot;: &quot;${event-properties:Success}&quot;, &quot;Note&quot;: &quot;${message}&quot;"
				/>

		<!-- Log Warn -->
		<target name="warnFile" xsi:type="File"
				fileName="logs/warn.log"
				layout= "&quot;Time&quot;: &quot;${longdate}&quot;, &quot;Level&quot;: &quot;${level}&quot;, &quot;AccountId&quot;: &quot;${event-properties:AccountId}&quot;, &quot;SubId&quot;: &quot;${event-properties:SubId}&quot;, &quot;Action&quot;: &quot;${event-properties:Action}&quot;, &quot;Amount&quot;: &quot;${event-properties:Amount}&quot;, &quot;Success&quot;: &quot;${event-properties:Success}&quot;, &quot;Note&quot;: &quot;${message}&quot;"
				/>

		<!-- Log Error -->
		<target name="errorFile" xsi:type="File"
				fileName="logs/error.log"
				layout= "&quot;Time&quot;: &quot;${longdate}&quot;, &quot;Level&quot;: &quot;${level}&quot;, &quot;AccountId&quot;: &quot;${event-properties:AccountId}&quot;, &quot;SubId&quot;: &quot;${event-properties:SubId}&quot;, &quot;Action&quot;: &quot;${event-properties:Action}&quot;, &quot;Amount&quot;: &quot;${event-properties:Amount}&quot;, &quot;Success&quot;: &quot;${event-properties:Success}&quot;, &quot;Note&quot;: &quot;${message}&quot;"
				/>
	</targets>

	<rules>
		<!-- Chia file theo level -->
		<logger name="*" minlevel="Info" maxlevel="Info" writeTo="infoFile" />
		<logger name="*" minlevel="Warn" maxlevel="Warn" writeTo="warnFile" />
		<logger name="*" minlevel="Error" maxlevel="Error" writeTo="errorFile" />
	</rules>

</nlog>
